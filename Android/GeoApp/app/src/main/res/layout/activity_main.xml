<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gurumanikandan.geoapp.MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/txtLoaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:fontFamily="sans-serif-condensed"
        android:padding="20dp"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/btnGetLatLong"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Latitude and Longitude"
        android:onClick="getLatLong"/>

    <EditText
        android:id="@+id/txtLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Latitude"
        android:fontFamily="sans-serif-condensed"
        android:padding="20dp"
        />
    <EditText
        android:id="@+id/txtLongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Longitude"
        android:fontFamily="sans-serif-condensed"
        android:padding="20dp"
        />
    <Button
        android:padding="20dp"
        android:layout_gravity="center"
        android:id="@+id/btnGetAddress"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:text="Address"
        android:onClick="getAddress"/>
</LinearLayout>
