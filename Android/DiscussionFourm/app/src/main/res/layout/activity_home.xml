<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AlertDialog.AppCompat"
    android:weightSum="1"
    android:background="@drawable/material"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGotoLogin"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="47dp"
        android:layout_x="2dp"
        android:layout_y="200dp"
        android:text="Welcome to Discussion Forum"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/btnGotoLogin"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="121dp"
        android:layout_height="38dp"
        android:layout_above="@+id/btnGotoSignUp"
        android:layout_alignStart="@+id/btnGotoSignUp"
        android:layout_marginBottom="20dp"
        android:layout_x="180dp"
        android:layout_y="254dp"
        android:background="@drawable/button_style"
        android:elevation="5dp"
        android:text="Login"
        android:textColor="@android:color/background_light"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <Button
        android:id="@+id/btnGotoSignUp"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="123dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_x="180dp"
        android:layout_y="307dp"
        android:background="@drawable/button_style"
        android:elevation="5dp"
        android:text="Sign Up"
        android:textColor="@android:color/background_light"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

</RelativeLayout>

